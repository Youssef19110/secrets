<%- include('partials/header') %>

<style>
  body {
    background: #f0f2f5;
  }

  .secret-box {
    background: #ffffff;
    border-radius: 16px;
    padding: 25px;
    margin: 20px 0;
    box-shadow: 0 8px 16px rgba(173, 216, 230, 0.4);
    transition: 0.3s ease-in-out;
  }

  .secret-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(173, 216, 230, 0.5);
  }

  .secret-text {
    font-size: 1.6rem;
    font-weight: 600;
    color: #333; /* dark gray */
    background: transparent; /* FIX: remove black background */
    text-align: center;
    word-break: break-word;
    margin: 0;
  }
</style>



<div class="container mt-5">
  <% usersWithSecrets.forEach(function(user) { %>
    <% if (user.secrets && user.secrets.length > 0) { %>
      <% user.secrets.forEach(function(secret) { %>
        <div class="secret-box">
          <p class="secret-text"><%= secret %></p>
        </div>
      <% }); %>
    <% } %>
  <% }); %>
</div>

<div class="text-center mt-4">
  <a class="btn btn-outline-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  <a class="btn btn-outline-danger btn-lg" href="/logout" role="button">Log Out</a>
</div>

<%- include('partials/footer') %>
